    <section class="content-mid">  
      <div class="content-mid-div">
        {{!-- Dise√±o de cada casilla de mod --}}
        {{#each data}}
          <table class="mod-card">
              <tr class="mod-card-image">
                  <td class="image"colspan="2">
                      <img src="images/background.jpg" alt="">
                  </td>
              </tr>
              <tr class="mod-card-title">
                  <td class="name"><a class="mod-title" href="{{this.url}}"><strong>{{this.name}}</strong></a></td>
              </tr>
              <tr class="mod-card-bottom">
                  <td class="version">{{this.version}}</td>
                  <td><label>{{this.likes}}<span></label><input class="checkbox" type="checkbox" id={{this.id}} onclick=like()> <label class="like-button bi bi-heart-fill" for={{this.id}}></span></td>
              </tr>
            </table> 
        {{/each}}
